<h1>Login</h1>

<h3><%= flash[:message] %></h3>

<%#form_tag knows that this is a post request because we're using conventional naming and we're submitting from a new page  %>
<%= form_tag login_path, method: :post do %>
  <%= label_tag :name %>
  <%= text_field_tag :name%>
  <%= label_tag :password %>
  <%= password_field_tag :password%>

  <%= submit_tag 'Login' %>
<% end %>

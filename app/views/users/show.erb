<h1>Hey! <%= @user.name %></h1>

<h2>My Meals:</h2>
<ul>
<% @user.meals.each do |meal| %>
  <li><%= link_to meal.name, meal %></li>
<% end %>
</ul>

<h1>Active days:</h1>
<% @user.active_days.each do |day| %>
  <p><%= day.strftime("%b, %d, %Y") %></p>
<% end %>

<%= button_to "View Meals", meals_path, method: :get%>
<%= button_to "Logout", logout_path, :method => :delete %>
<%= button_to "Delete Account", @user, :method => :delete, data: { confirm: 'Are you sure you want to delete this account?'} %>

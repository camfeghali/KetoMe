<h1>Sign up</h1>
<%= button_to "Go to Sign In", login_path, method: :get%>
<% if flash[:errors] != nil %>
  <% flash[:errors].each do |error| %>
    <%= error %>
  <% end %>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.submit%>

<% end %>
